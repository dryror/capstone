<Alloy>
	<NavigationWindow id="modalNav">
		<Window class="container" title="Transects" id="modalWin">
			
			<LeftNavButton>
				<Button id="backBtn" title="Back" onClick="backBtnClick" />
			</LeftNavButton>
			
			<RightNavButton>
				<Button id="editBtn" title="Edit" onClick="editBtnClick" />
			</RightNavButton>
			
			<ScrollView>	
				<Label id="transectLbl" text="Transect Name:" />
				<TextField id="transectName" />
				<Label id="transectError" class="error" visible="false" />
				
				<Label id="surveyorLbl" text="Surveyor:" />
				<TextField id="surveyor" />
				<Label id="surveyorError" class="error" visible="false" />
				
				<Label id="otherSurveyorsLbl" text="Other Surveyors:" />
				<TextField id="otherSurveyors" hintText="(optional)" />
				<Label id="otherSurveyorsError" class="error" visible="false" />
				
				<Label id="plotDistLbl" text="Plot Distance:" />
				<TextField id="plotDistance" />
				<Label id="plotDistanceError" class="error" visible="false" />
				
				<Label id="stakeOriLbl" text="Stake Orientation:" />
				<TabbedBar id="stakeBar" />
				<Label id="stakeError" class="error" visible="false" />
				
				<Label id="commentsLbl" text="Comments:" />
				<TextField id="comments" hintText="(optional)" />
				<Label id="commentsError" class="error" visible="false" />
				
				<Button id="photoBtn" title="Take Photo" onClick="takePhoto" visible="false"/>
				<ImageView id="transectThumbnail" onClick="previewPhoto" visible="false"/>
				<Label id="photoError" class="error" visible="false" />
				<Label id="thumbnailHintText" class="error" visible="false" text="Click thumbnail to preview photo"/>
				
				<View id="footerLine" visible = "false"/>
				<Label id="info" visible = "false"/>
				
			</ScrollView>
			
		</Window>
	</NavigationWindow>
</Alloy>