<Alloy>
	<Window class="container" title="Plots" id="plotsWin">
		<RightNavButton>
			<Button id="editPlot" title="Edit" onClick="editBtn"/>
		</RightNavButton>
		
		<TableView class="table" id="tbl">
			<HeaderView id="mainHeader">
				<View id="headerView">
					<Button id="addPlot" title="Add Plot" onClick="addBtn"/>
					<Label id="addPlotError" class="error" visible="false" text="*Total Ground Coverage is less than 100%"/>
				</View>
			</HeaderView>
			<!--Placeholder row for testing screens-->
			<TableViewRow title="Row 1" id="row1"></TableViewRow>
		</TableView>
	</Window>
</Alloy>